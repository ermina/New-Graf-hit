extends _layout.pug

block vars
  - var pageTitle="Accueil"

block content
  block contentAjax
    h1 à ré-écouter
    each highlight in highlighted
      .media-object.podcast
        .media-object-section
          .thumbnail(data-file=highlight.fileUrl, data-title=highlight.title)
            //img(src="/img/logo.png")
            img.media-play(src="/img/media-play.svg")
        .media-object-section
          h5= highlight.title
          p !{highlight.description}
    if actus
      h1 actualités
      each actu in actus
        .callout
          h5= actu.title
          p !{actu.content}
